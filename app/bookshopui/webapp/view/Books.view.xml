<mvc:View controllerName="bookshopui.controller.Books"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:f="sap.f"
    xmlns="sap.m">
    <f:DynamicPage id="page">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>title}"/>
                </f:heading>
                <f:actions>
                    <Button text="{i18n>create}" press=".onCreate" type="Emphasized"/>
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                    <ObjectAttribute id="bookCountAttribute" title="Total Books" text="{view>/bookCount}" />
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <List id="booksList" items="{/Books}" mode="Delete" delete=".onDelete">
                <ObjectListItem
                    title="{title}"
                    number="{stock}"
                    numberUnit="pcs"
                    type="Active">
                    <attributes>
                        <ObjectAttribute text="Author: {author}" />
                        <ObjectAttribute text="Pages: {pages}" />
                    </attributes>
                </ObjectListItem>
            </List>
        </f:content>
    </f:DynamicPage>
</mvc:View>
